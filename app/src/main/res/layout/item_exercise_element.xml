<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_128dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/item_exercise_element__title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_exercise_element__value"
        android:hint="@string/parameter_name"
        app:layout_constraintVertical_weight="1"
        />

    <EditText
        android:id="@+id/item_exercise_element__value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_exercise_element__title"
        app:layout_constraintEnd_toStartOf="@id/item_exercise_element__units"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="30"
        app:layout_constraintVertical_weight="1"
        android:hint="@string/value"
        />

    <Spinner
        android:id="@+id/item_exercise_element__units"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/item_exercise_element__title"
        app:layout_constraintStart_toEndOf="@id/item_exercise_element__value"
        app:layout_constraintEnd_toStartOf="@id/item_exercise_element__input_type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="30"
        app:layout_constraintVertical_weight="1"
        android:entries="@array/exercise_elements_units"
        />

    <Spinner
        android:id="@+id/item_exercise_element__input_type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/item_exercise_element__title"
        app:layout_constraintStart_toEndOf="@id/item_exercise_element__units"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="40"
        app:layout_constraintVertical_weight="1"
        android:entries="@array/exercise_elements_input_type"
        />

</androidx.constraintlayout.widget.ConstraintLayout>