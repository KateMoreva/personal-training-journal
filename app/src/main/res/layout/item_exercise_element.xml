<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_exercise_element__top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_exercise_element__left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintGuide_begin="@dimen/dimens_8dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_exercise_element__bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/dimens_8dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_exercise_element__right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintGuide_end="@dimen/dimens_8dp"
        />

    <EditText
        android:id="@+id/item_workout_element__icon"

        android:layout_width="0dp"
        android:layout_height="64dp"

        style="@style/Input"

        app:layout_constraintStart_toEndOf="@id/item_exercise_element__left"
        app:layout_constraintEnd_toStartOf="@id/item_exercise_element__right"
        app:layout_constraintTop_toTopOf="@id/item_exercise_element__top"

        android:hint="@string/parameter_name"
        />

    <EditText
        android:id="@+id/item_exercise_element__value"

        style="@style/Input"

        android:layout_width="0dp"
        android:layout_height="64dp"

        app:layout_constraintStart_toStartOf="@id/item_exercise_element__left"
        app:layout_constraintTop_toBottomOf="@id/item_workout_element__icon"
        app:layout_constraintEnd_toStartOf="@id/item_workout_element__title"
        app:layout_constraintBottom_toTopOf="@id/item_exercise_element__bottom"

        app:layout_constraintHorizontal_weight="30"

        android:hint="@string/value"
        />

    <Spinner
        android:id="@+id/item_workout_element__title"

        android:layout_width="0dp"
        android:layout_height="64dp"

        app:layout_constraintTop_toBottomOf="@id/item_workout_element__icon"
        app:layout_constraintStart_toEndOf="@id/item_exercise_element__value"
        app:layout_constraintEnd_toStartOf="@id/item_workout_element__description"
        app:layout_constraintBottom_toTopOf="@id/item_exercise_element__bottom"

        app:layout_constraintHorizontal_weight="30"

        android:entries="@array/exercise_elements_units"
        />

    <Spinner
        android:id="@+id/item_workout_element__description"

        android:layout_width="0dp"
        android:layout_height="64dp"

        app:layout_constraintTop_toBottomOf="@id/item_workout_element__icon"
        app:layout_constraintStart_toEndOf="@id/item_workout_element__title"
        app:layout_constraintEnd_toEndOf="@id/item_exercise_element__right"
        app:layout_constraintBottom_toTopOf="@id/item_exercise_element__bottom"

        app:layout_constraintHorizontal_weight="40"

        android:entries="@array/exercise_elements_input_type"

        />

</androidx.constraintlayout.widget.ConstraintLayout>