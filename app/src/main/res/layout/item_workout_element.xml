<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_workout_element__top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/dimens_8dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_workout_element__left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintGuide_begin="@dimen/dimens_8dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_workout_element__bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="0dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_workout_element__right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintGuide_end="@dimen/dimens_8dp"
        />

    <ImageView
        android:id="@+id/item_workout_element__icon"

        style="@style/Input"

        android:layout_width="0dp"
        android:layout_height="64dp"

        android:gravity="center"

        app:layout_constraintStart_toStartOf="@id/item_workout_element__left"
        app:layout_constraintTop_toTopOf="@id/item_workout_element__top"
        app:layout_constraintEnd_toStartOf="@id/item_workout_element__title"
        app:layout_constraintBottom_toTopOf="@id/item_workout_element__bottom"

        app:layout_constraintHorizontal_weight="10"
        android:src="@drawable/ic_account_circle_black_24dp"

        />

    <TextView
        android:id="@+id/item_workout_element__title"

        android:layout_width="0dp"
        android:layout_height="64dp"

        app:layout_constraintTop_toBottomOf="@id/item_workout_element__top"
        app:layout_constraintStart_toEndOf="@id/item_workout_element__icon"
        app:layout_constraintEnd_toStartOf="@id/item_workout_element__description"
        app:layout_constraintBottom_toTopOf="@id/item_workout_element__bottom"

        app:layout_constraintHorizontal_weight="30"
        android:textAlignment="center"
        android:gravity="center"
        tools:text="Sample title"
        />

    <TextView
        android:id="@+id/item_workout_element__description"

        android:layout_width="0dp"
        android:layout_height="64dp"

        app:layout_constraintTop_toBottomOf="@id/item_workout_element__top"
        app:layout_constraintStart_toEndOf="@id/item_workout_element__title"
        app:layout_constraintEnd_toEndOf="@id/item_workout_element__right"
        app:layout_constraintBottom_toTopOf="@id/item_workout_element__bottom"

        app:layout_constraintHorizontal_weight="60"

        android:textAlignment="center"
        android:gravity="center"

        tools:text="Sample description"

        />

</androidx.constraintlayout.widget.ConstraintLayout>